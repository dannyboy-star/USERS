		{
			"name": "Transactions",
			"item": [
				{
					"name": "Deposit",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"amount\": 100.50,\n    \"description\": \"Salary deposit\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/transactions/deposit",
							"host": ["{{base_url}}"],
							"path": ["transactions", "deposit"]
						},
						"description": "Deposit funds into account. Amount: 0.01 - 1,000,000. Requires authentication."
					},
					"response": []
