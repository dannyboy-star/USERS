						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"recipientEmail\": \"recipient@example.com\",\n    \"amount\": 25.75,\n    \"description\": \"Payment for services\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/transactions/transfer",
							"host": ["{{base_url}}"],
							"path": ["transactions", "transfer"]
						},
						"description": "Transfer funds to another user. Amount: 0.01 - 1,000,000. Requires sufficient balance. Requires authentication."
