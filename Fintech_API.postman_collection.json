				{
					"name": "Get Transactions",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/transactions?page=1&limit=10&type=deposit",
							"host": ["{{base_url}}"],
							"path": ["transactions"],
							"query": [
								{
									"key": "page",
									"value": "1",
									"description": "Page number"
								},
								{
									"key": "limit",
									"value": "10",
									"description": "Items per page"
								},
								{
									"key": "type",
									"value": "deposit",
									"description": "Filter by type: deposit, withdrawal, transfer"
								}
							]
						},
						"description": "Get transaction history with pagination. Query params: page, limit, type (optional). Requires authentication."
					},
					"response": []
				}
			]
		}
