							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"amount\": 50.00,\n    \"description\": \"ATM withdrawal\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/transactions/withdraw",
							"host": ["{{base_url}}"],
							"path": ["transactions", "withdraw"]
						},
						"description": "Withdraw funds from account. Amount: 0.01 - 1,000,000. Requires sufficient balance. Requires authentication."
					},
					"response": []
